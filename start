#!/usr/bin/env bash
GREEN='\033[1;32m'
BLUE='\033[1;34m'
CYAN='\033[1;36m'
YELLOW='\033[0;33m'
NC='\033[0m'

echo "==========================================================";
echo -e "${GREEN}";
echo "     _                   ____            _           _    ";
echo "    / \   __ _ _ __ ___ |  _ \ _ __ ___ (_) ___  ___| |_  ";
echo "   / _ \ / _\ | '__/ _ \| |_) | '__/ _ \| |/ _ \/ __| __| ";
echo "  / ___ \ (_| | | | (_) |  __/| | | (_) | |  __/ (__| |_  ";
echo " /_/   \_\__, |_|  \___/|_|   |_|  \___// |\___|\___|\__| ";
echo "         |___/                        |__/                ";
echo "                                                          ";
echo -e "                                             ${YELLOW}WebApp v.1.0${NC}";
